<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
	<TextView
			android:id="@+id/rec_Time"
			android:layout_width="fill_parent"
			android:layout_height="20sp"
			android:gravity="center_horizontal"
			/>

	<ImageView
			android:id="@+id/rec_headPic"
			android:layout_width="45dp"
			android:layout_height="45dp"
			android:layout_below="@id/rec_Time"
			android:layout_alignParentLeft="true"
			/>
	<TextView
			android:id="@+id/rec_talkContent"
			android:layout_width="wrap_content"
			android:layout_height="45dp"
			android:layout_below="@id/rec_Time"
			android:layout_toRightOf="@id/rec_headPic"
			android:gravity="center_vertical"
			/>
	<TextView
			android:id="@+id/rec_status"
			android:layout_width="wrap_content"
			android:layout_height="45dp"
			android:layout_below="@id/rec_Time"
			android:layout_toRightOf="@id/rec_talkContent"
			android:gravity="center_vertical"
			android:layout_marginLeft="10sp"
			/>

</RelativeLayout>